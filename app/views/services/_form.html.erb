  <div class="panel-body">
    <%= form_for(@service) do |f| %>

      <div class='input-group'>
        <span class='input-group-addon glyphicon glyphicon-user'></span>
          <%= f.text_field :name, class:'form-control', placeholder:'Name' %>
      </div>

      <div class='input-group'>
        <span class='input-group-addon glyphicon glyphicon-usd'></span>
          <%= f.text_field :price, class:'form-control', placeholder:'Price' %>
      </div>
             
      <div class='input-group'>
        <span class='input-group-addon glyphicon glyphicon-time'></span>
          <%= f.number_field :duration, class:'form-control', placeholder:'Duration' %>
      </div>
            
      <div class='input-group'>
        <span class='input-group-addon '><strong>%</strong></span>
          <%= f.text_field :discount, class:'form-control', placeholder:'Discount' %>
      </div>
      
      <% if action_name == 'new' %>
          <%= render 'form_submit_button_new' %>
      <% elsif action_name == 'edit'%>
          <%= render 'form_submit_button_edit' %>
      <% end %>

    <% end %>

  </div>