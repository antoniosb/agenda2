<div class=" well well-lg service-list">
  <h1 class='text-center text-info'>Listing services</h1>
  
  <div class="panel panel-info">
    <div class='panel-body '>
    <table class="table table-stripped table-hover" id="service_table">
      <thead class='text-info'>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Duration</th>
          <th>Discount</th>
        </tr>
      </thead>
      <tbody>
        <% @services.each do |service| %>
          <%= render partial: 'table_row', locals:{ service: service } %>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <h2><span class='btn btn-default btn-lg pull-right'><%= link_to 'New Service', "#new_service_modal", 'data-toggle'=>'modal' %></span></h2>
</div>

<%# Bootstrap modal markup. @see: http://getbootstrap.com/javascript/#modals %>
<div class="modal fade" id="new_service_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog panel well signin panel-default">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h1 class='text-info text-center' id="myModalLabel">New service</h1>
      </div>

        <div id='help-block'>

        </div>

      <div class="modal-body">
        <%# Render the new person form (passing modal => true to enable remote => true) %>
        <%= render 'form', modal: true %>
      </div>

    </div>
  </div>
</div>