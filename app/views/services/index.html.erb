<div class=" well well-lg service-list">
  <h1 class='text-center text-info'>Listing services</h1>
  
  <div class="panel panel-info">
    <div class='panel-body '>
    <table class="table table-stripped table-hover">
      <thead class='text-info'>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Duration</th>
          <th>Discount</th>
        </tr>
      </thead>
      <tbody>
        <% @services.each do |service| %>
          <tr data-link="<%= edit_service_path(service) %>">
            <td><%= service.name.humanize %></td>
            <td><%= number_to_currency_br(service.price) %></td>
            <td><%= service.duration %>&nbsp;minutes</td>
            <% if service.discount  %>
              <td><%= service.discount%>&nbsp;&#37;</td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <h2><span class='btn btn-default btn-lg pull-right'><%= link_to 'New Service', new_service_path %></span></h2>
</div>
