<div class="col-md-6 col-md-offset-3 panel well signin panel-default">

  <h2 class='text-info text-center'><strong>Service Details</strong></h2>

  <div class='panel panel-info'>
      
      <ul class="list-group">
        <li class='list-group-item list-group-item-default'>
          <h3 class='text-info'><strong>Name:</strong><span class='label label-info pull-right'><%= @service.name %></span></h3>
        </li>
        <li class='list-group-item list-group-item-default'>
          <h3 class='text-info'><strong>Price:</strong><span class='label label-info pull-right'><%= number_to_currency_br(@service.price) %></span></h3>
        </li>
         <li class='list-group-item list-group-item-default'>
          <h3 class='text-info'><strong>Duration:</strong><span class='label label-info pull-right'><%= @service.duration %>&nbsp;minutes</span></h3>
        </li>
         <li class='list-group-item list-group-item-default'>
          <h3 class='text-info'><strong>Discount:</strong><span class='label label-info pull-right'><%= @service.discount || 0 %>&nbsp;&#37;</span></h3>
        </li>
      </ul>

  </div>

  <div class='btn-group btn-group-lg pull-right'>
    <span class='btn btn-default'><%= link_to 'Edit', edit_service_path(@service) %> </span>
    <span class='btn btn-default'><%= link_to 'Back', services_path %></span>
    <span class='btn btn-default'><%= link_to 'Destroy', @service, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  </div>
</div>