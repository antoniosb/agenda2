<div class=" well well-lg service-list">
  <h1 class='text-center text-info'>Listing appointments</h1>
  
  <div class="panel panel-info">
    <div class='panel-body '>
    <table class="table table-stripped table-hover">
      <thead class='text-info'>
        <tr>
          <th>Date</th>
          <th>Status</th>
          <th>User</th>
          <th>Service</th>
        </tr>
      </thead>
      <tbody>
        <% policy_scope(@appointments).each do |appointment| %>
          <tr data-link="<%= edit_appointment_path(appointment) %>">
            <td><%= appointment.appointment_date.strftime('%A, %R (%d %B)') %></td>
            <td class='status-color'><%= appointment.status.humanize %></td>
            <% if appointment.user.present? %>
              <td><%= appointment.user.name.humanize %></td>
            <% else %>
              <td></td>
            <% end %>
            <% if appointment.service.present? %>
              <td><%= appointment.service.name %></td>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
  <h2><span class='btn btn-default btn-lg pull-right'><%= link_to 'New Appointment', new_appointment_path %></span></h2>
</div>
